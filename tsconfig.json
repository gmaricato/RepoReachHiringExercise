// prettier-ignore
{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@ui/*": ["./src/ui/*"],
      "@components/*": ["./src/ui/components/*"],
      "@features/*": ["./src/features/*"],
      "@core/*": ["./src/core/*"],
      "@utils/*": ["./src/utils/*"],
      "@data/*": ["./src/data/*"]
    },
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  }
}
